doctype html
html(lang="ru-Ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title ИнвестБанк

		include includes/link.pug

	body
		header
			include includes/header.pug
			section.first-screen.first-screen--md-margin
				.first-screen-content
					.bg-image
						picture
							source(srcset="img/first-screen-content-bg15.webp" type="image/webp")
							source(srcset="img/first-screen-content-bg15.jpg" type="image/jpeg")
							img.bg-image__img(src="img/first-screen-content-bg15.jpg")
					.wrapper-first-screen
						.bread-crumbs
							.container
								ul.bread-crumbs__list
									li.bread-crumbs__item
										a.bread-crumbs__link(href="#") Главная
									li.bread-crumbs__item
										a.bread-crumbs__link(href="#") О банке
									li.bread-crumbs__item
										span.bread-crumbs__link История банка
						.container
							.first-screen-content__wrap.first-screen-content__wrap--inner
								.first-screen-content__row-title
									h2.first-screen-content__title История банка

		main
			section.history
				.container
					.history__wrapper
						mixin historyRow(date, year, text)
							.history-row
								.history-row__icon
								.history-row__line
								.history-row__wrap
									.history-row__wrap-date
										span.history-row__date= date
										span.history-row__year= year
									.history-row__wrap-text
										span.history-row__text= text

						+historyRow('февраль', '1994 г.', 'По решению общего собрания акционеров Краснодарский  филиал Калининградского банка «Инвестбанк» в г. Краснодаре был преобразован в самостоятельную банковскую структуру  - МКБ «ЮГ-Инвестбанк». ')
						+historyRow('5 апреля', '1994 г.', 'Банк получил лицензию на проведение банковских операций в рублях и иностранной валюте (расширенная лицензия) с регистрационным номером  2772.')
						+historyRow('январь', '1997 г.', 'Открыт Тихорецкий филиал.')
						+historyRow('январь', '1998 г.', 'Открыт Яблоновский филиал')
						+historyRow('июнь', '1998 г.', 'Открыт дополнительный офис в г. Краснодаре, ул. Мира, 88. (с февраля 1994г. по июнь 1998г. в здании находилось Головное подразделение  Банка).')
						+historyRow('январь', '1997 г.', 'Открыт Тихорецкий филиал.')
