doctype html
html(lang="ru-Ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title ИнвестБанк

		include includes/link.pug

	body
		header
			include includes/header.pug
			section.first-screen.first-screen--sm-margin
				.first-screen-content
					.bg-image
						picture
							source(srcset="img/first-screen-content-bg17.webp" type="image/webp")
							source(srcset="img/first-screen-content-bg17.jpg" type="image/jpeg")
							img.bg-image__img(src="img/first-screen-content-bg17.jpg")
					.wrapper-first-screen
						//- .bread-crumbs
						//- 	.container
						//- 		ul.bread-crumbs__list
						//- 			li.bread-crumbs__item
						//- 				a.bread-crumbs__link(href="#") Главная
						//- 			li.bread-crumbs__item
						//- 				span.bread-crumbs__link обратная связь
						.container
							.first-screen-content__wrap.first-screen-content__wrap--inner
								.first-screen-content__row-title
									h2.first-screen-content__title обратная связь
									p.first-screen-content__subtitle Пожалуйста, заполните простую форму, проверьте данные перед отправкой и укажите как можно больше подробностей. Это поможет нам с ответом.


		main
			section.center-wrapper.center-wrapper--change
				.container
					.feedback
						form.feedback__form(action="")
							.feedback__block
								label.field
									span.field__description Фамилия Имя Отчество
									.field__wrap
										input.field__field(type="text" name="" placeholder="Укажите как в паспорте")
							.feedback__block
								label.field
									span.field__description Телефон
									.field__wrap
										input.field__field(type="tel" name="" placeholder="+7 (___) ___ - __ - __")
							.feedback__block
								label.field
									span.field__description E-mail
									.field__wrap
										input.field__field(type="email" name="" placeholder="Нужен для отправки ответа")
							.feedback__block
								.select-field
									.select-field__up
										span.select-field__name Тип вопроса
									.select-field__wrap
										select.select-field__select(name="my_select")
											option(value="Потребительский") Потребительский
											option(value="Потребительский") Потребительский
											option(value="Потребительский") Потребительский
											option(value="Потребительский") Потребительский
							.feedback__block
								label.field
									span.field__description Текст обращения
									.field__wrap
										textarea.field__field.field__field--textarea(placeholder="Максимум 2048 символов")

							.feedback__flex
								.check-form
									label.check-form__wrap
										input.check-form__input(type="checkbox" name="")
										.check-form__square
									span.check-form__text Я подтверждаю <a href="#">согласие на обработку персональных данных</a>

								button.btn-block.btn-block--two(type="submit")
									span.btn-block__text отравить

							a.link-more.link-more--black(href="#")
								span Об уполномоченном по правам потребителей финансовых услуг
								.link-more__wrap-svg
									svg
										use(xlink:href="img/sprite.svg#arrow")



			section.down-sect.gray
				.container
					.down-sect__grid
						.down-sect__wrap
							.currency-rates
								.currency-rates__left
									h3.currency-rates__caption Курсы валют
									span.currency-rates__subtitle Курс актуален на 11:50, 20.03.2020
								.currency-rates__right
									.currency-rates-table
										//- .currency-rates-table__row-caption


										.currency-rates-table__row
											span.currency-rates-table__name USD
											.currency-rates-table__wrap
												span.currency-rates-table__caption Покупка
												.currency-rates-table__val
													span 74.90
													svg.currency-rates-table__arrow.currency-rates-table__arrow--down
														use(xlink:href="img/sprite.svg#arrow-down")
											.currency-rates-table__wrap
												span.currency-rates-table__caption Продажа
												.currency-rates-table__val
													span 82.95
													svg.currency-rates-table__arrow.currency-rates-table__arrow--down
														use(xlink:href="img/sprite.svg#arrow-down")
										.currency-rates-table__row
											span.currency-rates-table__name EUR
											.currency-rates-table__wrap
												.currency-rates-table__val
													span 80.65
													svg.currency-rates-table__arrow.currency-rates-table__arrow--up
														use(xlink:href="img/sprite.svg#arrow-down")
											.currency-rates-table__wrap
												.currency-rates-table__val
													span 88.75
													svg.currency-rates-table__arrow.currency-rates-table__arrow--up
														use(xlink:href="img/sprite.svg#arrow-down")

						.down-sect__wrap
							.contact-block
								.contact-block__wrapper
									h3.contact-block__title Контакты
									.contact-block__wrap
										a.contact-block__tel(href="tel:+78612596656") +7 (861) 259-66-56
										button.btn-block.btn-block--three
											span.btn-block__text заказать звонок
										span.contact-block__caption Адрес центрального отделения
										p.contact-block__text 350000, г. Краснодар, ул. Красная, 113


		footer
			include includes/footer.pug




		include includes/script.pug