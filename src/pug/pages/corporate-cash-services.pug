		include includes/link.pug

	body
		header
			include includes/header.pug
			section.first-screen
				.first-screen-content
					.bg-image
						picture
							source(srcset="img/first-screen-content-bg8.webp" type="image/webp")
							source(srcset="img/first-screen-content-bg8.jpg" type="image/jpeg")
							img.bg-image__img(src="img/first-screen-content-bg8.jpg")
					.wrapper-first-screen
						.bread-crumbs
							.container
								ul.bread-crumbs__list
									li.bread-crumbs__item
